#! /bin/sh
# Configures build environment for appropriate target architecture

# Definitions
BUILD_DIR="build"

# Common build prep function
init_build_common() {
  mkdir -p ${BUILD_DIR}
}

init_lpddr() {
  cd ${BUILD_DIR}
  cmake .. -DCMAKE_TOOLCHAIN_FILE="../rtos/toolchain/riscv32.toolchain" \
           -DCONFIG_SRC_ARCH="riscv" \
           -DCONFIG_TARGET_ARCH="riscv32" \
           -DCONFIG_TARGET_BOARD="wavious-mcu" \
           -DCMAKE_BUILD_TYPE=""
  cd ..
}

print_help() {
echo "Usage: configure [OPTIONS]\n"
echo "This program configures CMAKE for wavious lpddr project\n"
}

PARAMS=""
while [ $# -gt 0 ]; do
  case "$1" in
    -h | --help)
      print_help
      exit
      ;;
    --) # end argument parsing
      shift
      break
      ;;
    -*|--*=) # unsupported flags
      echo "Error: Unsupported flag $1" >&2
      exit 1
      ;;
    *) # preserve positional arguments
      PARAMS="$PARAMS $1"
      shift
      ;;
  esac
done
# set positional arguments in their proper place
eval set -- "$PARAMS"

init_build_common
init_lpddr
